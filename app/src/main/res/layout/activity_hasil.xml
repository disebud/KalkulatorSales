<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".HasilActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALKULATOR SALES"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/yamaha_logo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="NAMA PEMBELI"
    android:layout_marginStart="20dp"
    android:textAlignment="textStart"
    android:layout_marginTop="20dp"
    android:textSize="15sp"
    android:textColor="@color/black"/>

<TextView
    android:id="@+id/tvNama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="NAMA"
    android:textAlignment="textEnd"
    android:textSize="20sp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="HARGA MOTOR"
    android:layout_marginStart="20dp"
    android:textAlignment="textStart"
    android:layout_marginTop="5dp"
    android:textSize="15sp"
    android:textColor="@color/black"/>

<TextView
    android:id="@+id/tvHargaMotor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="0000000"
    android:textColor="#0C93FF"
    android:textStyle="bold"
    android:textAlignment="textEnd"
    android:textSize="20sp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="DP"
    android:layout_marginStart="20dp"
    android:textAlignment="textStart"
    android:layout_marginTop="5dp"
    android:textSize="15sp"
    android:textColor="@color/black"/>

<TextView
    android:id="@+id/tvDpMotor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="000000000"
    android:textAlignment="textEnd"
    android:textSize="20sp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POKOK HUTANG"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvPokokUtang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="00000"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TOTAL BUNGA"
    android:layout_marginStart="20dp"
    android:textAlignment="textStart"
    android:layout_marginTop="5dp"
    android:textSize="15sp"
    android:textColor="@color/black"/>

<TextView
    android:id="@+id/tvTotalBunga"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="00000000"
    android:textAlignment="textEnd"
    android:textSize="20sp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TOTAL HUTANG"
    android:layout_marginStart="20dp"
    android:textAlignment="textStart"
    android:layout_marginTop="5dp"
    android:textSize="15sp"
    android:textColor="@color/black"/>

<TextView
    android:id="@+id/tvTotalHutang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="textEnd"
    android:hint="00000"
    android:textSize="20sp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL ANGSURAN"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvTotalAngsuran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:hint="00000"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

<Button
    android:id="@+id/btnMain"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="HOME"
    android:onClick="homeMain"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"/>



</LinearLayout>