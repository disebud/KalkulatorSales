<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALKULATOR SALES"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/yamaha_logo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAMA"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISIKAN NAMA"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARGA MOTOR"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etHargaMotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISIKAN HARGA"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DP"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etDpMotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISIKAN DP %"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TENOR"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etTenorMotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISIKAN LAMA TENOR - BULAN"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUNGA"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etBungaMotor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISIKAN BUNGA %"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/btnHitung"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        android:backgroundTint="#0069BC"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>